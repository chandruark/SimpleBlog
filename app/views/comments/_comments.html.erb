<h3>Comments</h3>
<% @post.comments.each do |comment| %>
		<div class="jumbotron" style="width:20 px height:2 px">
		<p><STRONG><%= comment.username %></STRONG>: <%= comment.body %>
		&nbsp

		<%= link_to 'Delete-comment',[comment.post,comment] ,
							method: :delete,
							data: { confirm: 'Are you Sure?'} %>



		 </p>
		</div>




<% end %>



